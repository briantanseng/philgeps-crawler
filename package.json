{
  "name": "philgeps-crawler",
  "version": "1.0.0",
  "description": "Web crawler and scraper for PhilGEPS procurement opportunities",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "background:crawler": "node scripts/crawler.js",
    "crawl": "node src/crawl.js",
    "crawl:all": "node src/crawl-all.js",
    "crawl:resume": "node src/crawl-all.js --resume",
    "crawl:clean": "node src/crawl-all.js --clean",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:coverage": "playwright test coverage.spec.ts",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:coverage && npm run test:e2e"
  },
  "keywords": [
    "web-scraping",
    "crawler",
    "philgeps",
    "procurement"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-table": "^8.11.2",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "knex": "^3.1.0",
    "next": "^15.3.2",
    "node-cron": "^3.0.3",
    "pg": "^8.16.0",
    "puppeteer": "^24.9.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.0.1",
    "c8": "^10.1.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "nyc": "^17.1.0",
    "postcss": "^8",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
